doctype html

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Contact Us
    link(rel="stylesheet", href="/contact.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    include index

    main
      .contact-section
        h1 Contact Us
        p We would love to hear from you! Feel free to reach out with any questions or feedback.

      //â€“ feedback messages
      if successMessage
        p.success-message= successMessage
      if errorMessage
        p.error-message= errorMessage

      .contact-info
        .info
          i.fas.fa-phone
          p +1 234 567 890
        .info
          i.fas.fa-envelope
          p contact@eventregister.com
        .info
          i.fas.fa-map-marker-alt
          p 123 Event St, Event City, EC 12345

      .contact-form
        h2 Send us a Message
        form(method="POST", action="/send-message")
          .form-group
            input(
              type="text",
              name="name",
              placeholder="Your Name",
              required,
              value=name || ''
            )
          .form-group
            input(
              type="email",
              name="email",
              placeholder="Your Email",
              required,
              value=email || ''
            )
          .form-group
            textarea(
              name="message",
              placeholder="Your Message",
              required
            )= message || ''
          .form-group
            button(type="submit") Send Message

    footer
      p &copy; 2025 Event Registration System
