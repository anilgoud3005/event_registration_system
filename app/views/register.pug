doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Register
    link(rel="stylesheet", href="/register.css")
  body
    include index

    main.register-section
      
      form(method="POST", action="/signup")
        h1 Create an Account
        if successMessage
            p.success-message= successMessage
        if errorMessage
            p.error-message= errorMessage
        .form-group
          label(for="email") Email
          input#email(type="email", name="email", placeholder="Your email" required)
        .form-group
          label(for="password") Password
          input#password(type="password", name="password", placeholder="Choose a password" required)
        .form-group
          label(for="confirmPassword") Confirm Password
          input#confirmPassword(type="password", name="confirmPassword", placeholder="Re-enter password" required)
        .form-group
          button(type="submit") Register
        p
            | Already have an account?
            a(href="/login") Login

    footer
      p &copy; 2025 Event Registration System
